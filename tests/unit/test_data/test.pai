}

tool find_max(a, b) {
    when a > b {
        set result to a
    } otherwise {
        set result to b
    }
}

tool fibonacci(n) {
    when n <= 1 {
        set result to n
    } otherwise {
        fibonacci(n - 1)
        set fib1 to result
        fibonacci(n - 2)
        set fib2 to result
        set result to fib1 + fib2
    }
}

